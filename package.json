{
  "name": "mini-markdown-vue",
  "version": "1.0.0",
  "private": true,
  "description": "Vue 3 Markdown编辑器，支持实时预览和语法高亮",
  "scripts": {
    "dev": "pnpm --filter @mini-markdown/app dev",
    "build": "pnpm --filter \"@mini-markdown/*\" build",
    "test": "pnpm --filter \"@mini-markdown/*\" test",
    "lint": "pnpm --filter \"@mini-markdown/*\" lint  --fix --no-warn-ignored",
    "format": "prettier --write \"**/*.{js,ts,vue,json}\"",
    "prepare": "husky",
    "dev:core": "pnpm --filter @mini-markdown/core dev",
    "dev:ui": "pnpm --filter @mini-markdown/ui dev",
    "dev:app": "pnpm --filter @mini-markdown/app dev",
    "build:core": "pnpm --filter @mini-markdown/core build",
    "build:ui": "pnpm --filter @mini-markdown/ui build",
    "build:app": "pnpm --filter @mini-markdown/app build",
    "test:core": "pnpm --filter @mini-markdown/core test",
    "test:ui": "pnpm --filter @mini-markdown/ui test",
    "test:app": "pnpm --filter @mini-markdown/app test",
    "lint:core": "pnpm --filter @mini-markdown/core lint --fix --no-warn-ignored",
    "lint:ui": "pnpm --filter @mini-markdown/ui lint --fix --no-warn-ignored",
    "lint:app": "pnpm --filter @mini-markdown/app lint --fix --no-warn-ignored"
  },
  "keywords": [
    "markdown",
    "editor",
    "vue3",
    "monorepo"
  ],
  "author": "Cloissanra🥐",
  "license": "MIT",
  "packageManager": "pnpm@10.6.3",
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "17.8.0",
    "@eslint/js": "^9.22.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.5.3",
    "typescript": "~5.3.3",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.9",
    "vue-eslint-parser": "^10.1.1"
  }
}